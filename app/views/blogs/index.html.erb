<p id="notice"><%= notice %></p>

<h1>Mini blog</h1>

<%= form_for @blog, :url => {:controller => :blogs, :action => :create} do |f| %>
  <%= f.text_field :body, :placeholder => '投稿しよう', :size => '80%', :name => 'blog[body]', :id => 'blog_body' %>
  <%= f.submit "投稿する", :name => 'commit', :disable_with => '投稿する' %>
<% end %>

<hr/>

<table>

  <tbody>
    <% @blogs.reverse_each do |blog| %>
      <tr>
        <td><%= blog.id %>:<%= link_to blog.body, blog %></td>
        <tr>
          <td><%= link_to 'いいね', blog, method: :like %>: <%= blog.like%> |</td>
          <td>コメント数: <%= @replies.where(blog_id:blog.id).length %>
           | </td>
          <td>投稿日時: <%= blog.created_at %></td>
        </tr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

